    <%= form_for(@article) do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :name, :autofocus => true %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>

      <div class="field">
        <%= f.label :image %>
        <% if @article.avatar_file_name != nil %>
        <br /><br />
        <p>Current Image</p>
        <%= image_tag @article.avatar.url(:medium) %>
        <br />
        <br />
        <p>Change</p>
        <% end %>
        <%= f.file_field :avatar, required: (action_name != "edit") ? true : false %>
      </div>

      <div class="field">
        <%= f.label :shippable %><br>
        <%= f.check_box :shippable %>
      </div>


       <div class="field hidden">
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </div>
      <div class="actions">
        <% if action_name == "edit" %>
        <%= f.submit "Update", :class => "btn btn-success" %>
        <% else %>
        <%= f.submit "Create", :class => "btn btn-success" %>
        <% end %>
        <%= link_to 'Back', articles_path,  :class => "btn btn-warning"%>
      </div>
    <% end %>


