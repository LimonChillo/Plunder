<h1>My Articles</h1>

<table class = "table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Shippable</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.where(:user_id => current_user).each do |article| %>
      <tr>
        <td><%= link_to( image_tag(article.avatar.url(:thumb), :class => "tinyArticleImg"), article_path(article.id)) %></td>
        <td><%= article.name %></td>
        <td><%= article.description %></td>
        <td><%= article.shippable %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success' %>
        <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-default' %>
