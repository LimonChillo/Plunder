<div class="row showArticle">
  <div class="col-md-4 col-md-offset-4">
    <%= image_tag @article.avatar.url(:medium), :class => "showArticleImg" %>
    <h2>
      <%= @article.name %>
    </h2>

    <p>
      <strong>Description:</strong>
      <%= @article.description %>
    </p>

    <p>
      <strong>Shippable:</strong>
      <%
            if @article.shippable?
          %>
              <i class="glyphicon glyphicon-ok"></i>
          <%
            else
          %>
            <i class="glyphicon glyphicon-remove"></i>
          <%
          end
          %>
    </p>
     <% if @article.user_id == current_user.id %>
    <%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-success" %>
     <% end %>
    <%= link_to 'Back', articles_path, :class => "btn btn-warning" %>
  </div>
</div>