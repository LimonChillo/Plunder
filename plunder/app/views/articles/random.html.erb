<% %>
 <div class="row randomArticle">
    <div class="col-md-4 col-md-offset-4">
      <% if @random_article != nil %>
        <div class="randomImg">
          <%= image_tag "a#{@random_article.id}.jpg", :class => 'img-responsive'  %>
        </div>
        <p>
          <strong>
            <%= @random_article.name %>
          </strong>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @random_article.description %>
        </p>

        <p>
          <strong>Shippable:</strong>
          <%= @random_article.shippable %>
        </p>

        <%= link_to 'Can I has?', like_article_path(:id => @random_article.id, :choice => "yes"), :class => 'btn btn-success' %>
        <%= link_to 'Nope', like_article_path(:id => @random_article.id, :choice => "no"), :class => 'btn btn-danger' %>

      <% else %>
        <h2> There are no Articles you have not seen yet :(</h2>
        <br />
        <%= link_to 'Check again', random_article_path, :class => 'btn btn-default center-block' %>
      <% end %>
    </div>
</div>
