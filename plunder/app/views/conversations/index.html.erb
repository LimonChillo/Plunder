<h1>My Conversations</h1>

<table class = "table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversations.where("user_1_id = ? or user_2_id = ?", current_user.id, current_user.id).each do |conversation| %>
      <tr>
        <td><%= conversation.user_1_id %></td>
        <td><%= User.where(:id => conversation.user_2_id).pluck(:name).first %></td>
        <td>
          <%= link_to 'Show', conversation %>
          <%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
