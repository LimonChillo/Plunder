<h1>My Conversations</h1>

<table class = "table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversations.where("user_1_id = ? or user_2_id = ?", current_user.id, current_user.id).each do |conversation| 

      if conversation.user_1_id == current_user.id
        user2 = conversation.user_2_id
      else
        user2 = conversation.user_1_id
      end
    %>
      <tr>
        <td><%= image_tag User.where(:id => user2).first.avatar.url(:thumb) %></td>
        <td><%= User.where(:id => user2).pluck(:name).first %></td>
        <td>
          <%= link_to 'Show', conversation %>
          <%= link_to 'Delete', conversation, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
