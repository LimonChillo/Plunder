<div class="row editArticle">
  <div class="col-md-4 col-md-offset-4">
    <%
      if @article.user_id != current_user.id
    %>
      <h1>Forbidden!</h1>
      <h2>You can't change articles that don't belong to you</h2>
    <% else %>
    <h1>Editing Article</h1>
    <%= render 'form' %>
    <% end %>
  </div>
</div>