<head>
  <title><%= h(yield(:title) || "Untitled") %></title>
  <%= stylesheet_link_tag 'application' %>
  <%#= javascript_include_tag 'jquery.1.3.2.min' %>
  <%= yield(:head) %>
  <script src="http://deepliquid.com/projects/Jcrop/js/jquery.min.js"></script>
<script src="http://deepliquid.com/projects/Jcrop/js/jquery.Jcrop.js"></script>
</head>

<% #title "Crop Avatar" %>
<% content_for (:head) do %>
<%#= stylesheet_link_tag "jquery.Jcrop" %>
<%= javascript_include_tag "jquery.Jcrop.min" %>

<% end %>
<body>
<%= image_tag @article.avatar.url(:large), :id => "cropbox" %>
<%= form_for @article , :url => url_for(:action => 'crop') do |form| %>
  <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
    <%= form.text_field attribute, :id => attribute %>
  <% end %>
  <p><%= form.submit "Crop" %></p>
<% end %>
<script type="text/javascript">
  $(function() {
  $('#cropbox').Jcrop({
    onChange: update_crop,
    onSelect: update_crop,
    setSelect: [0, 0, 500, 500],
    aspectRatio: 1
  });
});
</script>
</body>
